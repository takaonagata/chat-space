.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group test
      %ul.main-header__left-box__menber-list 
        Member :
        %li.main-header__left-box__member-list__member name
        
    = link_to "#", class:"edit-btn" do
      .main-header__edit-btn Edit
  .messages
    .message 
      .message__upper-info
        %p.message__upper-info__talker name
        %p.message__upper-info__date 2020/02/10(mon)
      %p.message__text メッセージが入る
  .form
    %form.new_message
      .input-box
        %input{type: "text", class: "input-box", placeholder: "type a message"}
        %label{class: "input-box__image"}
          =icon('fas', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn"}